{
  "version": 2,
  "builds": [
    {
      "src": "support-bot.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/support-bot.js" },
    { "source": "/chat", "destination": "/index.html" },
    { "source": "/api/chat", "destination": "/support-bot.js" },
    { "source": "/styles.css", "destination": "/style.css" },
    { "source": "/script-bot.js", "destination": "/script.js" },
    { "source": "/public/(.*)", "destination": "/public/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
} 